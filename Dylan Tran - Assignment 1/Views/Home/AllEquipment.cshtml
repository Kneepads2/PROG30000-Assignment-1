@model IEnumerable<Dylan_Tran___Assignment_1.Models.Equipment>

<h2>All Equipment Listing</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Type</th>
            <th>Description</th>
            <th>Available</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var equipment in Model)
        {
            <tr>
                <td>@equipment.Id</td>
                <td>@equipment.Type</td>
                <td>@equipment.Description</td>
                <td>@(equipment.IsAvailable ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>
